@model IEnumerable<OrderManagementWeb.Models.BestItemViewModel>

@{
    ViewBag.Title = "Best Selling Items";
}

<h2>Best Selling Items Report</h2>

<div class="panel panel-default" style="margin-bottom: 20px;">
    <div class="panel-body">
        @using (Html.BeginForm("BestItems", "Reports", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate" />
            </div>
            <div class="form-group" style="margin-left: 10px;">
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate" />
            </div>
            <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Filter</button>
            @Html.ActionLink("Clear", "BestItems", null, new { @class = "btn btn-default", style = "margin-left: 5px;" })
        }
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Item Name</th>
                <th>Size</th>
                <th>Unit Price</th>
                <th>Total Quantity Sold</th>
                <th>Total Revenue</th>
                <th>Number of Orders</th>
            </tr>
        </thead>
        <tbody>
            @{ int rank = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@rank</td>
                    <td>@item.ItemName</td>
                    <td>@item.Size</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalQuantitySold</td>
                    <td>@item.TotalRevenue.ToString("C")</td>
                    <td>@item.OrderCount</td>
                </tr>
                rank++;
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4" class="text-right">Totals:</th>
                <th>@Model.Sum(x => x.TotalQuantitySold)</th>
                <th>@Model.Sum(x => x.TotalRevenue).ToString("C")</th>
                <th>@Model.Sum(x => x.OrderCount)</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="alert alert-info">
        <strong>No data found.</strong> There are no items to display for the selected date range.
    </div>
}

<p>
    @Html.ActionLink("Back to Reports", "Index", null, new { @class = "btn btn-default" })
</p>
