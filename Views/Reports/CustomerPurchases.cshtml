@model IEnumerable<OrderManagementWeb.Models.CustomerPurchaseViewModel>

@{
    ViewBag.Title = "Customer Purchases";
}

<h2>Customer Purchases Report</h2>

<div class="panel panel-default" style="margin-bottom: 20px;">
    <div class="panel-body">
        @using (Html.BeginForm("CustomerPurchases", "Reports", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label for="agentId">Customer:</label>
                @Html.DropDownList("agentId", ViewBag.AgentID as SelectList, "-- All Customers --", new { @class = "form-control" })
            </div>
            <div class="form-group" style="margin-left: 10px;">
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate" />
            </div>
            <div class="form-group" style="margin-left: 10px;">
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate" />
            </div>
            <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Filter</button>
            @Html.ActionLink("Clear", "CustomerPurchases", null, new { @class = "btn btn-default", style = "margin-left: 5px;" })
        }
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Agent Name</th>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AgentName</td>
                    <td>@item.OrderID</td>
                    <td>@item.OrderDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitAmount.ToString("C")</td>
                    <td>@item.TotalAmount.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="6" class="text-right">Grand Total:</th>
                <th>@Model.Sum(x => x.TotalAmount).ToString("C")</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="alert alert-info">
        <strong>No data found.</strong> There are no purchases to display for the selected criteria.
    </div>
}

<p>
    @Html.ActionLink("Back to Reports", "Index", null, new { @class = "btn btn-default" })
</p>
