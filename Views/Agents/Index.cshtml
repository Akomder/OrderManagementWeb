@model IEnumerable<OrderManagementWeb.Agent>

@{
    ViewBag.Title = "Agents";
}

<h2>Agents</h2>

<p>
    @Html.ActionLink("Create New Agent", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Agent ID</th>
            <th>Agent Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AgentID</td>
                <td>@item.AgentName</td>
                <td>@item.Address</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AgentID }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.AgentID }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.AgentID }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
