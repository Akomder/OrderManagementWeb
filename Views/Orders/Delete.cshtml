@model OrderManagementWeb.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Order ID</dt>
        <dd>@Model.OrderID</dd>

        <dt>Order Date</dt>
        <dd>@Model.OrderDate.ToString("MM/dd/yyyy")</dd>

        <dt>Agent Name</dt>
        <dd>@Model.Agent.AgentName</dd>

        <dt>Total Items</dt>
        <dd>@Model.OrderDetails.Sum(od => od.Quantity)</dd>

        <dt>Total Amount</dt>
        <dd>@Model.OrderDetails.Sum(od => od.UnitAmount * od.Quantity).ToString("C")</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
