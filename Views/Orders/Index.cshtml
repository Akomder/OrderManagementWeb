@model IEnumerable<OrderManagementWeb.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New Order", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Agent Name</th>
            <th>Total Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>@item.Agent.AgentName</td>
                <td>@item.OrderDetails.Sum(od => od.Quantity)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.OrderID }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Print", "Print", new { id = item.OrderID }, new { @class = "btn btn-sm btn-success", target = "_blank" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
